<Page x:Class="KingIT.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KingIT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Выберите, что желаете посмотреть:" FontSize="14" FontFamily="Arial" FontWeight="Bold" VerticalAlignment="Bottom" Foreground="#FFFF9C1A" Width="250" Margin="0 20"/>
            <Button x:Name="SC_Page" Content="Торговые центры" Width="200" Grid.Row="1" Click="SC_Page_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Arial"/>
            <Button x:Name="Pavilions_Page" Content="Павильоны" Width="200" Grid.Row="2" Click="Pavilions_Page_Click" />
        </Grid>
</Page>
